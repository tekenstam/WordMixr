[flake8]
max-line-length = 88
select = E,W,F
# Error codes to ignore:
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
ignore = 
    E203,
    E501,
    W503,
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    htmlcov,
    build,
    dist,
    .venv,
    venv,
    tests/conftest.py
per-file-ignores = 
    __init__.py:F401 