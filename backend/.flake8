[flake8]
max-line-length = 88
select = E,W,F
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    htmlcov,
    build,
    dist,
    .venv,
    venv,
    tests/conftest.py
per-file-ignores = 
    __init__.py:F401 